{
  "name": "divergent-app",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"node server.js\" \"vite\"",
    "dev:ui": "vite",
    "dev:api": "node server.js",
    "build": "vite build",
    "preview": "vite preview",
    "start": "node server.js",
    "test": "jest --config jest.config.cjs",
    "test:prompts": "jest --config jest.config.cjs tests/promptLoader.test.cjs tests/promptHygiene.test.cjs",
    "test:personality": "node scripts/run-personality-scenarios.cjs --delay=20000",
    "test:personality:quick": "node scripts/run-personality-scenarios.cjs --limit=6 --delay=20000",
    "test:personality:dry": "node scripts/run-personality-scenarios.cjs --dry-run",
    "test:conversation": "node scripts/run-conversation-tests.cjs --delay=20000",
    "test:conversation:dry": "node scripts/run-conversation-tests.cjs --dry-run",
    "test:all-voices": "npm run test:personality && npm run test:conversation"
  },
  "dependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.18",
    "concurrently": "^9.2.1",
    "cors": "^2.8.5",
    "dotenv": "^17.3.1",
    "express": "^4.18.2",
    "postcss": "^8.4.35",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.4.1",
    "vite": "^5.1.4"
  },
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "jest": "^30.2.0"
  }
}
